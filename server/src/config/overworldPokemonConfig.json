      "moveDistance": { "min": 16, "max": 48 }
    }
  },
  "movementPatterns": {
    "random": {
      "description": "Déplacement aléatoire dans toutes les directions",
      "usesBoundaries": true,
      "respectsCollisions": true
    },
    "wander": {
      "description": "Déambulation autour d'un point central",
      "usesBoundaries": true,
      "respectsCollisions": true,
      "requiresWanderRadius": true
    },
    "float": {
      "description": "Mouvement libre pour Pokémon volants/spectraux",
      "usesBoundaries": true,
      "respectsCollisions": false,
      "allowsDiagonal": true
    },
    "patrol": {
      "description": "Patrouille entre des points fixes",
      "usesBoundaries": false,
      "respectsCollisions": true,
      "requiresPatrolPoints": true
    },
    "circle": {
      "description": "Mouvement en cercle",
      "usesBoundaries": true,
      "respectsCollisions": true,
      "requiresRadius": true
    }
  },
  "animationMappings": {
    "Walk-Anim.png": {
      "type": "standard",
      "directions": 8,
      "frameLayout": "rows",
      "description": "Animation de marche standard 8 directions"
    },
    "Swing-Anim.png": {
      "type": "swing",
      "directions": 8,
      "frameLayout": "columns",
      "description": "Animation de vol/balancement (première rangée uniquement)"
    },
    "Sleep-Anim.png": {
      "type": "idle",
      "directions": 1,
      "frameLayout": "single",
      "description": "Animation de sommeil/repos"
    }
  },
